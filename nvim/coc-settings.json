{
    "colors.enable": true,
    "inlayHint.display": false,
    "diagnostic.displayByAle": false,
    "coc.preferences.formatOnSave": false,
    "json.format.enable": true,
    "[json]": {
        "coc.preferences.formatOnSave": true
    },
    "[sql]": {
        "coc.preferences.formatOnSave": true
    },
    "coc.preferences.useQuickfixForLocations": true,
    "coc.preferences.jumpCommand": "edit",
    "pyright.disableDiagnostics": false,
    "pyright.enable": true,
    "python.formatting.provider": "none",
    "python.formatting.blackPath": "~/.pyenv/shims/black",
    "python.sortImports.path": "~/.pyenv/shims/isort",
    "python.sortImports.args": [
        "--profile",
        "black",
        "--ca"
    ],
    "python.linting.enabled": true,
    "python.linting.ruffEnabled": true,
    "python.linting.ruffPath": "~/.pyenv/shims/ruff",
    "python.linting.mypyEnabled": true,
    "python.linting.mypyPath": "~/.pyenv/shims/mypy",
    "python.linting.mypyArgs": [
        "--follow-imports=silent",
        "--show-column-numbers"
    ],
    "python.linting.pylintEnabled": false,
    "languageserver": {
        "golang": {
            "command": "gopls",
            "filetypes": [
                "go"
            ],
            "rootPatterns": [
                "go.mod",
                ".git/"
            ]
        }
    },
    "cSpell.ignoreWords": [
        "pyenv",
        "mypy",
        "isort",
        "gopls",
        "pylint",
        "grpc"
    ],
    "cSpell.userWords": [
        "folke",
        "gofmt",
        "hopen",
        "junegunn",
        "karb",
        "neoclide",
        "proto",
        "pytest",
        "qfenter",
        "ranelpadon",
        "simeji",
        "vopen",
        "windwp",
        "winresizer",
        "yssl"
    ]
}
